<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="{{ css_url }}" rel="stylesheet">
    <title>{{ title }}</title>
  </head>
  <body>
    <div class="row">
      <div class="col-1 left"></div>
      <div class="col-3 left title text-right pt-4">
        <h1>{{ title }}</h1>
        <p>An experiment in displaying python scripts.</p>
      </div>
      <div class="col-6 pt-4 main">
        {% if reload_js_url -%}
          <div class="text-right mb-2">
            <span class="h4">
              <span id="connection-state" class="badge badge-secondary cursor-help">waiting...</span>
            </span>
          </div>
        {%- endif %}
        {% block main %}
        {% endblock %}
      </div>
    </div>
  </body>
  {% if reload_js_url -%}
    <script src="{{ reload_js_url }}"></script>
  {%- endif %}
</html>
